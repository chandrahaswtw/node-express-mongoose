<%- include('./../partials/head.ejs') %> 
<link rel="stylesheet" href="/css/login.css">
</head>
<body>
<%- include('./../partials/navigation.ejs')%>
<main class="form-container">
    <div class="center-flex">
        <%- include('./../partials/orgName.ejs')%> 
        <div>
            <%- include('./../partials/flashAlert.ejs')%>  
            <%- include('./../partials/validationAlert.ejs')%> 
            <form action="/reset" method="POST" class="form-card">
                <p class="form-card-title">Reset password</p>
                <div class="fieldWrapper">
                    <label for="">New Password</label>
                    <input type="password" name="newPassword" value="<%= oldInput.newPassword%>" class="<%= validationErrors.find(e => e.param === 'newPassword') ? 'validation-error' : '' %>"/>
                </div>
                <div class="fieldWrapper">
                    <label for="">Confirm Password</label>
                    <input type="password" name="confirmPassword" value="<%= oldInput.confirmPassword%>" class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'validation-error' : '' %>"/>
                </div>
                <input type="hidden" name="token" value="<%= token%>">
                <button type="submit" class="full-width">Reset</button>
            </form>
        </div>    
</div>
</main>
<%- include('./../partials/end.ejs') %>
